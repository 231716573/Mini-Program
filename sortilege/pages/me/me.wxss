/* pages/me/me.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0 100rpx;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
}

.taplist {
  border-top: 1rpx solid #e0e0e0;
}
.tapview {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  font-size: 30rpx;
  position: relative;
}
.tapview::after {
  content: "";
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  border-right: 1rpx solid #666;
  border-bottom: 1rpx solid #666;
  position: absolute;
  right: 32rpx;
  top:50%;
  margin-top: -8rpx;
  transform: rotate(-45deg);
}
.tapview image {
  width: 40rpx;
  vertical-align: middle;
  margin-right: 12rpx;
}
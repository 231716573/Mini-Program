/* pages/sm1/sm1.wxss */
@import "../template/template.wxss";

.sm_bg {
  position: fixed;
  width: 100%;
  height: 100%;
  background: url('https://git.play800.cn/static/images/yinyuan_bg.jpg');
  background-size: 100% 100%;
}
.sm {
  position: fixed;
  z-index: 9;
  width: 100%;
  height:100%;  
  overflow: hidden;
}
.h2 {
  padding: 10rpx;
  text-align: center;
}
.chapter {
  margin: 10rpx;
  border:1rpx solid #000;
  font-size: 28rpx;
  background-color: #fff;
}
.chapter-view,.sm3-chapter-view {
  display: flex;
}
.chapter-view:nth-child(2) {
  background-color: #bf9000;
  color: #fff;
}
.sm3-chapter-view:nth-child(1) {
  background-color: #b45f06;
  color: #fff;
}
.chapter-view text {
  flex: 1;
  padding: 16rpx 20rpx;
  border-right: 1rpx solid #000;
}
.sm3-chapter-view text {
  text-align: center;
  font-size: 28rpx;
  flex: 1;
  padding: 16rpx 20rpx;
}
.chapter-view text:last-child {
  border:none;
}
.qt {
  margin: 10rpx;
  padding: 10rpx;
  border:1rpx solid #7f6000;
  font-size: 28rpx;
}
.sxqx {
  margin:40rpx 10rpx 10rpx;
  padding: 10rpx;
  border:1rpx solid #000;
  font-size: 28rpx;
  position: relative;
  line-height: 1;
}
.sxqx span {
  display: block;
  margin-bottom: 10rpx;
}

.yrsml i {
  width:160rpx;
}

.scroll-sm {
  height: 100%;
}
.sm-all {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding-bottom:140rpx;
  overflow-y: auto;
}

.ytg-title {
    font-size: 30rpx;
    text-align: center;
    margin-bottom: 10rpx;
}
.ytg-detail {
  position: relative;
  margin: 0 20rpx;
  font-size: 26rpx;
  background:url('https://git.play800.cn/static/images/yuantiangang_bg.png') repeat-x;
}
.ytg-detail .red {
  color: red;
  position: relative;
}
.ytg-detail .red i {
  position: absolute;
  display: inline-block;
  right: 0;
  bottom: -60rpx;
  font-size: 48rpx;
}
.ytg-detail .ytg-detail-chengu {
  text-align: center;
  padding-top: 10rpx;
}
.ytg-detail .yuantiangang {
  width: 60%;
}
.ytg-detail .ytg-content {

  text-align: center;
  position: absolute;
  right: 60rpx;
  top: 140rpx;
  font-size: 32rpx;
}
.ytg-detail .ytg-content .title {
  margin-bottom: 20rpx;
}
.chengu-msjs {
  margin: 20rpx 20rpx 10rpx;
  font-size: 26rpx;
}
.chengu-msjs-neirong {
  font-size: 26rpx;
  margin: 0 20rpx
}
.jianjiexian {
  border-bottom: 2px dotted red;
  margin: 40rpx 0;
}
.yinyuan {
  margin: 20rpx;
  font-size: 26rpx;
}
.yy-first {
  margin-top: 20rpx;
  line-height: 2
}
.yy-first .title {
  /* text-align: center; */
  margin-bottom: 20rpx;
  font-weight: bold;
}
.yy-first input {
  display: inline-block;
  width: 180rpx;
  height: 48rpx;
  line-height: 48rpx;
  border: 1rpx solid #999;
  border-radius: 6rpx;
  padding-left: 10rpx;
  vertical-align: middle;
  background-color: #fff;
}
.yy-first .name,.yy-first .sex {
  margin-bottom: 20rpx;
}
.yy-first .shengchen .date {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.yy-first .shengchen .picker-2 {
  display: inline-block;
  border: 1px solid #999;
  height: 48rpx;
  line-height: 48rpx;
  vertical-align: middle;
  border-radius: 6rpx;
  text-align: center;
  width: 194rpx;
  background-color: #fff;
  margin-right: 20rpx;
}

.yy-first .picker {
  display: inline-block;
  border: 1px solid #999;
  height: 48rpx;
  line-height: 48rpx;
  vertical-align: middle;
  border-radius: 6rpx;
  text-align: center;
  width: 100rpx;
  background-color: #fff;
}
.yy-first .name .picker {
  margin-left: 20rpx;
}
.yinyuan button {
  width: 230rpx;
  text-align: center;
  margin: 40rpx auto 0;
  padding: 0;
  background: yellow;
  line-height: 2;
  font-size: 28rpx;
  color:#fff;
  background:-webkit-gradient(linear, 0 0, 0 bottom, from(#f9a41a), to(#f57b1e));
}

.sm3-qt,.sm3-tg,.sm3-zp {
  margin:10px 5px;
  font-size: 28rpx;
}
.sm3-tg {
  border: 1rpx solid #000;
  padding: 10rpx;
}
.sm3-zp {
  border: 1rpx solid #000;
  padding: 10rpx;
  display: flex;
}
.sm3-zp-flex1 {
  flex: 2;
  line-height: 1.8;
  font-size: 26rpx;
}
.sm3-zp-flex2 {
  flex: 1;
  margin-top: 40rpx;
  font-size: 28rpx;
  text-align: right;
}
.sm3-qt-title {
  font-weight: bold;
  margin-bottom: 10rpx;
}

.sm7 {
  z-index: 10000;
  background: url('https://git.play800.cn/static/images/yinyuan_bg.jpg');
  background-size: 100% 100%;
  padding-bottom: 40rpx;
}
.sm7 .title {
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 36rpx;
  border-bottom: 1rpx solid #3f3f3f;
  position: relative;
}
.sm7 .title span {
  position: absolute;
  left: 0;
  top: 0;
  width: 88rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}
.sm7 .title span:after {
  display: inline-block;
  content: '';
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #333;
  border-top: 4rpx solid #333;
  transform: rotate(-45deg);
}
.sm7 .sm7-line {
  width: 100%;
  margin: 40rpx 0;
  border-bottom: 4rpx dotted red;
}
.sm7 .name1 {
  margin: 20rpx;
  font-size: 28rpx;
}
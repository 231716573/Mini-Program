/* pages/guanyin/guanyin.wxss */
.share::after{
  border: none;
}
.guanyin-title {
  text-align: center;
  margin-top: 20rpx;
}

.guanyin-title image {
  width: 60%;
}

.guanyin-sign {
  text-align: center;
  margin: 50rpx 0 20rpx;
}

.guanyin-sign image {
  width: 97rpx;
  height: 189rpx;
}

.guanyin-zhibei {
  text-align: center;
  position: relative;
}
.guanyin-zhibei view{
  position: absolute;
  width: 100%;
  height: 100%;
}

.guanyin-zhibei image {
  width: 188rpx;
  height: 62rpx;
}

.guanyin-tip {
  margin: 30rpx;
  font-size: 28rpx;
  color: #333;
  text-indent: 2em;
}

.guanyin-tip span {
  color: red;
  font-size: 30rpx;
}

.guanyin-gif {
  width: 50%;
  margin: 0 auto;
}

.guanyin-gif image {
  width: 100%;
}

.guanyin-jie {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: url('http://www.moepan.net/uploads/2018031314084058743202.jpg');
  background-size: 100% 100%;
}

.guanyin-jie .guanyin-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  /* padding-bottom: 30%;
  box-sizing: border-box;
  overflow-y: auto; */
}

.guanyin-jie .title {
  margin-top: 30rpx;
  text-align: center;
  font-weight: bold;
  color: #834b27;
}

.guanyin-jie .desc {
  margin: 20rpx;
  font-size: 30rpx;
  color: #834b27;
}

.guanyin-jie .desc span {
  margin-right: 20rpx;
}

.guanyin-jie .desc i {
  font-weight: bold;
  display: block;
}

.guanyin-jie .hide-guanyin {
  position: absolute;
  bottom: 5%;
  left: 50%;
  width: 188rpx;
  height: 62rpx;
  margin-left: -91rpx;
}

.guanyin-jie .hide-guanyin image {
  width: 100%;
}

/**index.wxss**/

.slides {
  height: 380rpx;
}

.slides navigator, .slides image {
  min-width: 100%;
  height: 100%;
}

.fortune {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.fortune .fortune-image {
  flex: 1;
}

.fortune .fortune-image image {
  width: 100%;
}

.fortune .fortune-content {
  flex: 2;
  font-size: 28rpx;
}

.fortune .fortune-content .name {
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 30rpx;
}

.fortune .fortune-content .picker {
  display: inline-block;
  border: 1px solid #999;
  height: 48rpx;
  line-height: 48rpx;
  vertical-align: middle;
  border-radius: 6rpx;
  text-align: center;
}

.fortune .fortune-content .name .picker {
  width: 70rpx;
}

.fortune .fortune-content .date .picker1 {
  width: 200rpx;
}

.fortune .fortune-content .date .picker2 {
  margin: 0 10rpx 0 20rpx;
  width: 90rpx;
}

.fortune .fortune-content .name input {
  width: 80rpx;
  height: 48rpx;
  border: 1rpx solid #999;
  border-radius: 6rpx;
  display: inline-block;
  vertical-align: middle;
  margin: 0 24rpx 0 10rpx;
  font-size: 24rpx;
}
.fortune .fortune-content .calculate {
  width: 200rpx;
  text-align: center;
  margin: 40rpx auto 0;
  padding: 10rpx 0;
  border:1rpx solid #333;
  background: yellow;
}

.pray {
  padding: 20rpx 20rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  margin-bottom: 20rpx;
}
.pray .title {
  text-align: center;
  margin:0 auto 20rpx;
  font-size: 32rpx;
}

.pray .pray-view {
  float: left;
  text-align: center;
  font-size: 28rpx;
  width: 33.33333%;
  margin-bottom: 30rpx;
}
.pray .pray-view .pray-image {
  width: 174rpx;
  height: 88rpx;
  margin-bottom: 10rpx;
}
.pray .pray-view .pray-image image {
  width: 100%;
}

.zgml {
  width: 100%;
}
.zgml image {
  width: 100%;
}
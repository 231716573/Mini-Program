/* pages/school/school.wxss */
.school-bar {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  font-size: 28rpx;
}
.school-bar .school-bar-bg {
  position: fixed;
  top:0;
  left:0;
  z-index: 98;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.2;
}
.school-bar .school-bar-type {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 101;
  background: #fff;
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid #eee;
  height: 60rpx;
  line-height: 60rpx;
}
.school-bar .school-bar-type view {
  flex: 1;
  text-align: center;
  color: #585858;
}
.school-bar .school-bar-type view.active {
  color: #22bc99;
}
.school-bar .school-bar-con {
  position: fixed;
  top: 60rpx;
  left: 0;
  z-index: 99;
  background: #fff;
  width: 100%;
}
.school-bar .school-bar-con view {
  padding: 0 30rpx 0 80rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #eee;
}
.school-bar .school-bar-con view.active {
  position: relative;
  color: #22bc99;
}
.school-bar .school-bar-con view icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  margin-top: -30rpx;
  display: inline-block;
}

.school-library {
  padding-top: 62rpx;
}
.school-library .school-list {
  display: flex;
  padding: 20rpx;
}
.school-library .school-list .school-img {
  flex: 1
}
.school-library .school-list image {
  width: 100%
}
.school-library .school-list .school-view {
  flex: 3;
  margin-left: 20rpx;
}
.school-library .school-list .school-view .title {
  color: #181818;
  font-size: 36rpx;
  font-weight: bold;
}
.school-library .school-list .school-view .tip {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  margin-top: 20rpx;
  border:1rpx solid #f9a562;
  color: #f9a562;
  display: inline-block;
}
.school-library .school-list .school-view .tag-box {
  font-size: 24rpx;
  margin-top: 20rpx;
}
.school-library .school-list .school-view .tag-item {
  padding: 4rpx 20rpx;
  margin-right: 20rpx;
  color: #fff;
  border-radius: 6rpx;
}
.school-library .school-list .school-view .tag-item.icon0 {
      background: #ff6d2d;
}
.school-library .school-list .school-view .tag-item.icon1 {
      background: #ffa65f;
}
.school-library .school-list .school-view .tag-item.icon2 {
      background: #96c9ff;
}
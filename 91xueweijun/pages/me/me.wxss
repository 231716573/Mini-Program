/* pages/me/me.wxss */
.personal-head {
  position: relative;
}
.personal-head .personal-view {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  /* border:1rpx solid red; */
  left: 50%;
  top: 40rpx;
  margin-left: -96rpx;
}
.personal-head .personal-view .personal-awatar {
  position: relative;
  width: 100%;
  height: 100%;
}
.personal-head .personal-view .personal-awatar .personal-circle1 {
  width: 100%;
  height: 100%;
  background: rgba(14,140,107,.15);
  border-radius: 100%;
}
.personal-head .personal-view .personal-awatar .personal-circle2 {
  position: absolute;
  top: 5%;
  left: 5%;
  width: 90%;
  height: 90%;
  background: rgba(14,140,107,.15);
  border-radius: 100%;
}
.personal-head .personal-view .personal-awatar .personal-awatar-bg {
  position: absolute;
  top: 10%;
  left: 10%;
  width: 80%;
  height: 80%;
  border-radius: 100%;
}
.personal-head .personal-view .personal-awatar .personal-name {
  color: #fff;
  margin-top: 20rpx;
}
.personal-head .personal-bg {
  width: 100%
}
.personal-list .personal-item {
  height: 96rpx;
  line-height: 96rpx;
  border-bottom: 1rpx solid #eee;
  padding: 0 40rpx;
  font-size: 30rpx;
  position: relative;
}

.personal-list .personal-item:after {
  position: absolute;
  content: '';
  display: inline-block;
  top: 50%;
  right: 30rpx;
  width: 16rpx;
  height: 16rpx;
  margin-top: -16rpx;
  border-right: 1rpx solid #666;
  border-bottom: 1rpx solid #666;
  transform: rotate(-45deg);
}

.personal-list .personal-item image {
  width: 44rpx;
  margin-right: 20rpx;
  vertical-align: text-top;
}
